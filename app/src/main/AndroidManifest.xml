<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RealidadAumentadaMuseo"
        tools:targetApi="31">

        <!-- Respuesta1Activity -->
        <activity
            android:name="com.ericksebas03.respuestas.Respuesta1Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.ericksebas03.respuestas.ACTION_RESPUESTA1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Adivinanza1Activity -->
        <activity
            android:name="com.ericksebas03.adivinanzas.Adivinanza1Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.ericksebas03.adivinanzas.ACTION_ADIVINANZA1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Adivinanza2Activity -->
        <activity
            android:name="com.ericksebas03.adivinanzas.Adivinanza2Activity"
            android:exported="true" />

        <!-- SplashActivity -->
        <activity
            android:name="com.ericksebas03.splashscreen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.ericksebas03.splashscreen.ACTION_SPLASH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Splash2Activity -->
        <activity
            android:name="com.ericksebas03.splashscreen.Splash2Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.ericksebas03.splashscreen.ACTION_SPLASH2" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- HomeActivity -->
        <activity
            android:name=".Home"
            android:exported="true" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>

