<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulosplash2"
        android:layout_width="372dp"
        android:layout_height="111dp"
        android:gravity="center"
        android:text="PoliMuseoVR"
        android:textAlignment="center"
        android:textColor="#2ECC71"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/descripcionsplash2"
        android:layout_width="357dp"
        android:layout_height="357dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/abeezee"
        android:text="Explora y aprende mientras resuelves preguntas sobre las exposiciones del museo. Busca el QR que responde a cada pregunta, gana puntos y descubre modelos 3D con datos curiosos. Â¡Vive una aventura educativa interactiva y divertida!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#2ECC71"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bottonsplash2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bottonsplash2"
        android:layout_width="294dp"
        android:layout_height="82dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#2ECC71"
        android:text="Comenzar"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>